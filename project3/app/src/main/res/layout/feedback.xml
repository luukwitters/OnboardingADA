<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_light"
    android:backgroundTint="@android:color/background_light"
    tools:context=".Feedback.Feedback">

    <ImageView
        android:id="@+id/cPink"
        android:layout_width="371dp"
        android:layout_height="284dp"
        android:layout_marginStart="132dp"
        android:layout_marginBottom="80dp"
        app:layout_constraintBottom_toTopOf="@+id/txtVraagNmr"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/cpink" />

    <ImageView
        android:id="@+id/cBlue"
        android:layout_width="339dp"
        android:layout_height="401dp"
        android:layout_marginEnd="184dp"
        android:layout_marginBottom="36dp"
        app:layout_constraintBottom_toTopOf="@+id/txtVraagNmr"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/cblue" />

    <ImageView
        android:id="@+id/Logo"
        android:layout_width="114dp"
        android:layout_height="78dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.912"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.039"
        app:srcCompat="@drawable/ic_logo_ada_main" />

    <TextView
        android:id="@+id/txtVraagNmr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/frutiger_lt_std_light"
        android:text="Feedback"
        android:textColor="#4D5693"
        android:textSize="36sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.196"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.408"
        />

    <TextView
        android:id="@+id/txtIntake"
        android:layout_width="317dp"
        android:layout_height="102dp"
        android:fontFamily="@font/frutiger_lt_std_light"
        android:text="Ik heb het intakegesprek goed ervaren."
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.51"
        app:layout_constraintBottom_toTopOf="@+id/btnOpenEens"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtVraagNmr"/>

    <TextView
        android:id="@+id/txtOpendag"
        android:layout_width="317dp"
        android:layout_height="102dp"
        android:fontFamily="@font/frutiger_lt_std_light"
        android:text="Ik heb de opendag goed ervaren."
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="24sp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.51"
        app:layout_constraintBottom_toTopOf="@+id/btnOpenEens"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtVraagNmr"/>

    <TextView
        android:id="@+id/txtOpenVraag"
        android:layout_width="317dp"
        android:layout_height="102dp"
        android:layout_marginTop="229dp"
        android:fontFamily="@font/frutiger_lt_std_light"
        android:text="Geef feedback over het intakegesprek en opendag."
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="24sp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.51"
        app:layout_constraintBottom_toTopOf="@+id/btnOpenEens"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtVraagNmr"/>

    <Button
        android:id="@+id/btnIntakeEens"
        android:layout_width="129dp"
        android:layout_height="48dp"
        android:background="@drawable/btn_stroke"
        android:fontFamily="@font/frutiger_lt_std_light"
        android:text="Eens"
        android:onClick="IntakeEens"
        android:textAllCaps="false"
        android:textColor="@android:color/black"
        android:textColorHighlight="@android:color/background_light"
        android:textColorHint="@android:color/background_light"
        android:textColorLink="@android:color/background_light"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.185"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.785"
        />


    <Button
        android:id="@+id/btnIntakeOneens"
        android:layout_width="129dp"
        android:layout_height="48dp"
        android:background="@drawable/btn_stroke"
        android:fontFamily="@font/frutiger_lt_std_light"
        android:text="Oneens"
        android:onClick="IntakeOneens"
        android:textAllCaps="false"
        android:textColor="@android:color/black"
        android:textColorHighlight="@android:color/background_light"
        android:textColorHint="@android:color/background_light"
        android:textColorLink="@android:color/background_light"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.85"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.785" />

    <Button
        android:id="@+id/btnOpenEens"
        android:layout_width="129dp"
        android:layout_height="48dp"
        android:background="@drawable/btn_stroke"
        android:fontFamily="@font/frutiger_lt_std_light"
        android:onClick="OpenEens"
        android:text="Eens"
        android:textAllCaps="false"
        android:textColor="@android:color/black"
        android:textColorHighlight="@android:color/background_light"
        android:textColorHint="@android:color/background_light"
        android:textColorLink="@android:color/background_light"
        android:textSize="18sp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.185"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.785"
         />


    <Button
        android:id="@+id/btnOpenOneens"
        android:layout_width="129dp"
        android:layout_height="48dp"
        android:background="@drawable/btn_stroke"
        android:fontFamily="@font/frutiger_lt_std_light"
        android:text="Oneens"
        android:onClick="OpenOneens"
        android:textAllCaps="false"
        android:textColor="@android:color/black"
        android:textColorHighlight="@android:color/background_light"
        android:textColorHint="@android:color/background_light"
        android:textColorLink="@android:color/background_light"
        android:textSize="18sp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.85"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.785" />

    <Button
        android:id="@+id/btnNext"
        android:layout_width="131dp"
        android:layout_height="45dp"
        android:background="@drawable/btn_stroke"
        android:fontFamily="@font/frutiger_lt_std_light"
        android:text="Verder"
        android:enabled="false"
        android:onClick="Verder"
        android:textAllCaps="false"
        android:textColor="@android:color/black"
        android:textColorHighlight="@android:color/background_light"
        android:textColorHint="@android:color/background_light"
        android:textColorLink="@android:color/background_light"
        android:textSize="18sp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.943"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.978" />

    <EditText
        android:id="@+id/txtFeedback"
        android:layout_width="379dp"
        android:layout_height="138dp"
        android:backgroundTint="@android:color/background_dark"
        android:ems="10"
        android:hint="Dit is tekst"
        android:inputType="textPersonName"
        android:textColor="#000000"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/btnNext"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtOpendag"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

</androidx.constraintlayout.widget.ConstraintLayout>